# $LastChangedDate: 2011-10-19 13:13:03 +0100 (Wed, 19 Oct 2011) $
#setup

PWD=`pwd`
export PRJROOT=${PWD}

SOURCEDIR=${PRJROOT}/source;
BUILDROOT=buildroot-2011.08
BUILDROOTPKG=${SOURCEDIR}/${BUILDROOT}.tar.bz2
LINUXPKG=linux-2.6.28.6.tar.bz2
LINUXLOCATION=/media/devshare/TQ6410/linux
#get local linux
cd  ${PRJROOT}/source;


if [ ! -e "$LINUXPKG" ]; then
	cp ${LINUXLOCATION}/${LINUXPKG} ${SOURCEDIR};
fi


#download
cd  ${PRJROOT}/source;


if [ ! -e "$BUILDROOTPKG" ]; then
	wget http://buildroot.net/downloads/buildroot-2011.08.tar.bz2;
fi

#unpack
if [ ! -d "$BUILDROOT" ]; then
    tar xvf ./buildroot-2011.08.tar.bz2;
fi

#patch
cd ${PRJROOT}/source/buildroot-2011.08
../../scripts/pre_build_script

#configure 
cd ${PRJROOT};
cp ${PRJROOT}/configs/buildroot-2011.08.config ${PRJROOT}/source/buildroot-2011.08/.config -v

#build
cd ${PRJROOT}/source/buildroot-2011.08

time make



